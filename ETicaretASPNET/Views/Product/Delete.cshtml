@model ETicaretASPNET.Models.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sil</h2>

<h3>Bu Ürünü silmek istediğinizden emin misiniz ?</h3>
<hr />
<div>

    <dl class="dl-horizontal">

        <dt>
            Ürün Adı :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            Açıklama :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

        <dt>
            Ürün Fiyatı :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Stoktaki Ürün Adedi :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

        <dt>
            Ürün Fotoğtafı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PImage)
        </dd>

        <dt>
            Anasayfada :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsHome)
        </dd>

        <dt>
            Onaylı :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsApproved)
        </dd>

        <dt>
            Popüler
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsFeatured)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sil" class="btn btn-danger" />
                @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-success" })
            </div>
        </div>
    }
</div>

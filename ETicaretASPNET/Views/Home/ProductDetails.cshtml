@using ETicaretASPNET.Models.Entity
@model Product


@{
    ViewBag.Title = "ProductDetails";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title  -->
    <title>@Model.ProductName -Detay</title>

    <!-- Favicon  -->
    <link rel="icon" href="/amado/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/amado/css/core-style.css">
    <link rel="stylesheet" href="/amado/style.css">

</head>

<body>
    <!-- Search Wrapper Area Start -->
    <div class="search-wrapper section-padding-100">
        <div class="search-close">
            <i class="fa fa-close" aria-hidden="true"></i>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="search-content">
                        <form action="#" method="get">
                            <input type="search" name="search" id="search" placeholder="Anahtar kelimeyi giriniz">
                            <button type="submit"><img src="/amado/img/core-img/search.png" alt=""></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Search Wrapper Area End -->
    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <div class="mobile-nav">
            <!-- Navbar Brand -->
            <div class="amado-navbar-brand">
                <a href="index.html"><img src="~/Content/images/plantsicon5.png" alt=""></a>
            </div>
            <!-- Navbar Toggler -->
            <div class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="index.html"><img src="~/Content/images/plantsicon5.png" alt=""></a>
            </div>
            <!-- Amado Nav -->
            <nav class="amado-nav">
                <ul>
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li class="active"><a href="Product">Ürünler</a></li>
                    <li><a href="Sepet">Sepet</a></li>
                    <li><a href="Login">Çıkış Yap</a></li>
                </ul>
            </nav>
            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-100">
                <a href="#" class="btn btn-success">%İndirimdekiler%</a>

            </div>
            <!-- Cart Menu -->
            <div class="cart-fav-search mb-100">
                <a href="cart.html" class="cart-nav"><img src="/amado/img/core-img/cart.png" alt=""> Sepet <span>(0)</span></a>
                <a href="#" class="fav-nav"><img src="/amado/img/core-img/favorites.png" alt=""> Favorileriniz</a>
                <a href="#" class="search-nav"><img src="/amado/img/core-img/search.png" alt=""> Ara</a>
            </div>
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->
        <!-- Product Details Area Start -->
        <div class="single-product-area section-padding-100 clearfix">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mt-50">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>

                                <li class="breadcrumb-item"><a href="#">@Model.ProductName</a></li>

                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-7">
                        <div class="single_product_thumb">
                            <div id="product_details_slider" class="carousel slide" data-ride="carousel">

                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <a class="gallery_img" href="~/Content/images/@Model.PImage">
                                            <img class="d-block w-100" src="~/Content/images/@Model.PImage" alt="@Model.ProductDescription">
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-5">
                        <div class="single_product_desc">
                            <!-- Product Meta Data -->
                            <div class="product-meta-data">
                                <div class="line"></div>
                                <p class="product-price">@Model.Price ₺</p>
                                <a href="product-details.html">
                                    <h6>@Model.ProductName </h6>
                                </a>
                                <!-- Ratings & Review -->
                                <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">

                                    <div class="review">
                                        <a href="#">@Model.ProductDescription </a>
                                    </div>
                                </div>
                                <!-- Avaiable -->
                                <p class="avaibility"><i class="fa fa-circle"></i> Stoktaki Ürün Adedi: @Model.Stock</p>
                            </div>

                            <div class="short_overview my-5">
                                <p>@Model.ProductDescription</p>
                            </div>

                            <!-- Add to Cart Form -->
                            <form class="cart clearfix" method="post">
                                <div class="cart-btn d-flex mb-50">
                                    <p>Adet</p>
                                    <div class="quantity">
                                        <span class="qty-minus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-caret-down" aria-hidden="true"></i></span>4
                                        <input type="number" class="qty-text" id="qty" step="1" min="1" max="300" name="quantity" value="1">
                                        <span class="qty-plus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-caret-up" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                <div>
                                    <!--mevzu model adının bind edilememesiymiş ben hiç razor kullanmaıdm :D -->
                                    @*@using (Html.BeginForm("AddToCart", "Cart", new { ProductID = Model.ProductID }, FormMethod.Post))
                                        {
                                            @Html.HiddenFor(i => i.ProductID)



                                            <input type="submit" name="SepeteEkle" class="btn amado-btn" value="" />
                                        }*@

                                    @*@using (Html.BeginForm("AddToCart", "Cart", , FormMethod.Post))
                                        {
                                            @Html.HiddenFor(m => m.ProductID)
                                            <input type="submit" value="Submit" />
                                        }*@

                                    <input id="ProductID" type="hidden" class="form-control" name="ProductID" value="@Model.ProductID">
                                    <button id="addCart" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i> Sepete Ekle</button>




                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Main Content Wrapper End ##### -->
    <!-- ##### Newsletter Area Start ##### -->
    <section class="newsletter-area section-padding-100-0">
        <div class="container">
            <div class="row align-items-center">
                <!-- Newsletter Text -->
                <div class="col-12 col-lg-6 col-xl-7">
                    <div class="newsletter-text mb-100">
                        <h2><span>25% indirim için</span> üye olun</h2>
                        <p> PlantsLife </p>
                    </div>
                </div>
                <!-- Newsletter Form -->
                <div class="col-12 col-lg-6 col-xl-5">
                    <div class="newsletter-form mb-100">
                        <form action="#" method="post">
                            <input type="email" name="email" class="nl-email" placeholder="Mail Adresiniz ?">
                            <a href="Index"><input type="submit" value="Üyelik"></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Newsletter Area End ##### -->
    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row align-items-center">
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-4">
                    <div class="single_widget_area">
                        <!-- Logo -->
                        <div class="footer-logo mr-50">
                            <a href="Index.cshtml"><img src="~/Content/images/plantsicon5.png" alt=""></a>
                        </div>
                        <!-- Copywrite Text -->
                        <p class="copywrite">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script>  PlantsLife <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-8">
                    <div class="single_widget_area">
                        <!-- Footer Menu -->
                        <div class="footer_menu">
                            <nav class="navbar navbar-expand-lg justify-content-end">
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i></button>
                                <div class="collapse navbar-collapse" id="footerNavContent">
                                    @Html.Partial("LoginPartial")
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->
    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src="/amado/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/amado/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/amado/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/amado/js/plugins.js"></script>
    <!-- Active js -->
    <script src="/amado/js/active.js"></script>

</body>

</html>
@* Sepete ekle butonu için ajax kodu *@
<script>
    $(document).ready(function () {
        var productId = $('#ProductID').val();
        
        $('#addCart').click(function () {
            console.log(productId);
            $.ajax({
                type: 'GET',
                dataType: 'json',
                url: '/Cart/AddToCart?ProductID=' + productId,

            });
        });
    });
   // o sayfa mı gelmeli evettttt
</script>